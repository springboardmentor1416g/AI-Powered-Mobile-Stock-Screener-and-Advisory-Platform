# Use official Node LTS image
FROM node:18-alpine

# Create app directory
WORKDIR /app

# Copy package files first (better caching)
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy source code
COPY src ./src

# Copy env example (actual env injected at runtime)
COPY .env.example .env.example

# Expose port
EXPOSE 8080

# Start server
CMD ["npm", "start"]
