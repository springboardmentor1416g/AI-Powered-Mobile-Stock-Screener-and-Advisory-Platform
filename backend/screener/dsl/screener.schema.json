{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "conditions"],
  "properties": {
    "name": { "type": "string" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "operator", "value"],
        "properties": {
          "field": { "type": "string" },
          "operator": {
            "type": "string",
            "enum": [">", "<", ">=", "<=", "=="]
          },
          "value": { "type": "number" }
        }
      }
    }
  }
}
